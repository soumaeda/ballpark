<% provide(:title, 'All users') %>
<h1>すべてのユーザー</h1>
<ul class="users d-flex justify-content-around flex-wrap pt-3">
  <% @users.each do |user| %>
  <li class="shadow mb-3 w-30 center">
    <%= link_to user do%>
      <%= gravatar_for user, size: 50 %>
      <h3><%= user.name %></h3>
    <% end %>
  </li>
  <% end %>
</ul>

<%= will_paginate @users, previous_label: '< 前へ', next_label: '次へ >' %>