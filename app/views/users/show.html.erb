<div class="container">
  <div class="row">
    <div class="col-4">
      <%= gravatar_for @user %>
    </div>
    <div class="col-8">
      <h1><%= @user.name %></h1>
      <p><%= @user.introduction%></p>
    </div>
  </div>
</div>

<% if current_user.admin? && !current_user?(user) %>
  <%= link_to "削除する", root_path, data: { "turbo-method": :delete,
                                          turbo_confirm: "本当に削除しますか？" } %>
<% end %>
    

